<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     >

    <LinearLayout
        android:id="@+id/lv_linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/video_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
             >
             <com.example.invinjun.listtexureviewdemo.view.VideoPlayTextureView
                android:id="@+id/videoview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />  
     <!--    <com.weishi.view.VideoView
                android:id="@+id/videoview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />  -->

            <ImageView
                android:id="@+id/video_cover_default"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/video_cover_default_small" />
 
  <com.example.invinjun.listtexureviewdemo.view.ProgressWheel
		        android:id="@+id/loading"
		        android:layout_width="90dp"
		        android:layout_height="90dp"
		        ProgressWheel:textColor="#FFFFFF"
		        ProgressWheel:textSize="24sp"
		        ProgressWheel:rimColor="#35FF00"
		        android:layout_centerInParent="true"
		        ProgressWheel:barLength="60dp" 
		        ProgressWheel:barColor="#35FF00"
		        ProgressWheel:barWidth="14dp"
		        ProgressWheel:rimWidth="14dp" 
		        android:visibility="gone"
		        ProgressWheel:spinSpeed="3dp" />
           <ImageView
                android:id="@+id/play_controller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" 
                android:src="@mipmap/icn_play_big" />
           
        </RelativeLayout>
          
        <LinearLayout 
             android:id="@+id/longVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
             android:visibility="gone"
            >
             <Button 
            android:id="@+id/btnlongVideo"
            android:layout_width="16dp"
            android:layout_height="16dp" 
            android:padding="6dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:background="@mipmap/slide_bar"
            />
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
 				android:text="点击观看长视频"
 				android:textColor="@color/gray"
 				android:textSize="17sp"
                />
            
        </LinearLayout>
        <LinearLayout                             
        android:id="@+id/lv_lin2"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
    >
        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30.0dip"
            android:layout_marginRight="30.0dip"
            android:text="2001.5.09"
            android:textColor="@color/black"
            android:padding="1dp"
            android:textSize="14.0sp" />
        <TextView
            android:id="@+id/description1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30.0dip"
            android:layout_marginRight="30.0dip"
            android:text="详细评论"
            android:textColor="@color/black"
            android:padding="1dp"
            android:textSize="14.0sp" />
       
        </LinearLayout>
